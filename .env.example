# Environment Variables for WordPress Article Generator
# Copy this file to .env and fill in your actual values

# WordPress Configuration
WP_BASE_URL=https://your-site.com/wp-json
WP_USERNAME=your_username
WP_APPLICATION_PASSWORD=your_application_password

# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1  # Optional: Custom API endpoint

# Optional: Override model settings
# OPENAI_MODEL=gpt-4o
# OPENAI_MAX_TOKENS=2500
# OPENAI_TEMPERATURE=0.7

# Optional: Override generation settings
# MAX_CONCURRENT=5
# CHECKPOINT_INTERVAL=10
